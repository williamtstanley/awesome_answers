<h1>All Questions</h1>


<% @questions.each do |question| %>
    <%= link_to question.title, question_path(question) %>
    <% if question.body.length > 60 %>
        <p>
            <%= question.body.truncate(60) %>
        </p>
    <% else %>
        <p>
            <%= question.body %>
        </p>
    <% end %>
    <hr>

<% end %>