<h1>Sign In</h1>

<%= form_tag sessions_path do %>
    <div class="input-container">
        <%= label_tag :email %>
        <%= email_field_tag :email, nil, {placeholder: "email address"} %>
    </div>
    <div class="input-container">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, {placeholder: "password"} %>
    </div>
    <%= submit_tag "Sign In" %>

<% end %>

